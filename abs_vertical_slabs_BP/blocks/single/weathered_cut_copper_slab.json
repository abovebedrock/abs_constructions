{
    "format_version": "1.20.70",
    "minecraft:block": {
        "description": {
            "identifier": "abs:weathered_cut_copper_slab",
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [
                        "minecraft:cardinal_direction"
                    ]
                }
            },
            "menu_category": {
                "category": "construction",
                "group": "itemGroup.name.slab"
            }
        },
        "components": {
            "minecraft:material_instances": {
                "*": {
                    "texture": "weathered_cut_copper",
                    "render_method": "opaque"
                }
            },
            "minecraft:selection_box": {
                "origin": [ -8.0, 0.0, -8.0 ],
                "size": [ 16.0, 16.0, 8.0 ]
            },
            "minecraft:collision_box": {
                "origin": [ -8.0, 0.0, -8.0 ],
                "size": [ 16.0, 16.0, 8.0 ]
            },
            "minecraft:geometry": "geometry.north",
            "tag:metal": {},
            "tag:copper": {},
            "minecraft:map_color": "#3A8E8C",
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.75
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 6.0
            },
            "minecraft:light_dampening": 1,
            "minecraft:loot": "loot_tables/empty.json",
            "minecraft:on_player_destroyed": {
                "condition": "query.is_item_name_any('slot.weapon.mainhand', 'minecraft:stone_pickaxe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:iron_pickaxe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:diamond_pickaxe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:netherite_pickaxe')",
                "event": "drop"
            },
            "minecraft:on_interact": {
                "condition": "query.is_item_name_any('slot.weapon.mainhand', 'minecraft:honeycomb') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:wooden_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:stone_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:iron_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:golden_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:diamond_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:netherite_axe')",
                "event": "interact"
            },
            "minecraft:random_ticking": {
                "on_tick": {
                    "condition": "math.random_integer(1, 1875) <= 128",
                    "event": "oxidize"
                }
            }
        },
        "events": {
            "drop": {
                "spawn_loot": {
                    "table": "loot_tables/blocks/weathered_cut_copper_slab.json"
                }
            },
            "interact": {
                "sequence": [
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand', 'minecraft:honeycomb')",
                        "decrement_stack": {},
                        "run_command": {
                            "command": [
                                "playsound copper.wax.on @a ~~~",
                                "particle abs:wax_on ~~~"
                            ]
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand', 'minecraft:wooden_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:stone_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:iron_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:golden_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:diamond_axe') || query.is_item_name_any('slot.weapon.mainhand', 'minecraft:netherite_axe')",
                        "damage": {
                            "amount": 1,
                            "target": "item",
                            "type": "durability"
                        },
                        "run_command": {
                            "command": [
                                "playsound scrape @a ~~~",
                                "particle abs:deoxidize ~~~"
                            ]
                        }
                    }
                ]
            },
            "oxidize": {
                "run_command": {
                    "command": "scriptevent abs:oxidize",
                    "target": "self"
                }
            }
        },
        "permutations": [
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'north'",
                "components": {
                    "minecraft:selection_box": {
                        "origin": [ -8.0, 0.0, -8.0 ],
                        "size": [ 16.0, 16.0, 8.0 ]
                    },
                    "minecraft:collision_box": {
                        "origin": [ -8.0, 0.0, -8.0 ],
                        "size": [ 16.0, 16.0, 8.0 ]
                    },
                    "minecraft:geometry": "geometry.north"
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'south'",
                "components": {
                    "minecraft:selection_box": {
                        "origin": [ -8.0, 0.0, 0.0 ],
                        "size": [ 16.0, 16.0, 8.0 ]
                    },
                    "minecraft:collision_box": {
                        "origin": [ -8.0, 0.0, 0.0 ],
                        "size": [ 16.0, 16.0, 8.0 ]
                    },
                    "minecraft:geometry": "geometry.south"
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'west'",
                "components": {
                    "minecraft:selection_box": {
                        "origin": [ 0.0, 0.0, -8.0 ],
                        "size": [ 8.0, 16.0, 16.0 ]
                    },
                    "minecraft:collision_box": {
                        "origin": [ 0.0, 0.0, -8.0 ],
                        "size": [ 8.0, 16.0, 16.0 ]
                    },
                    "minecraft:geometry": "geometry.west"
                }
            },
            {
                "condition": "query.block_state('minecraft:cardinal_direction') == 'east'",
                "components": {
                    "minecraft:selection_box": {
                        "origin": [ -8.0, 0.0, -8.0 ],
                        "size": [ 8.0, 16.0, 16.0 ]
                    },
                    "minecraft:collision_box": {
                        "origin": [ -8.0, 0.0, -8.0 ],
                        "size": [ 8.0, 16.0, 16.0 ]
                    },
                    "minecraft:geometry": "geometry.east"
                }
            }
        ]
    }
}